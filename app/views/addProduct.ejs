<%- include('header') %>
<form method="post" enctype="multipart/form-data">
<div class="card mt-3">
    <div class="card-body">
        <div class="card-title">เพิ่มรายการสินค้า</div>
        <div class="mt-3">
            <label>ประเภทสินค้า</label>
            <select name="group_product_id" class="form-control" >
                <% groupProduct.forEach((groupProduct) => { %>
                <option value="<%= groupProduct.id %>"
                    <% if (product.group_product_id == groupProduct.id) { %>
                        selected
                        <% } %>
                    >
                <%= groupProduct.name %>
                </option>
                <% }) %>
            </select>
        </div>
        <div class="mt-3">
            <label>Barcode</label>
            <input type="text" name="barcode" class="form-control" value="<%= product.barcode %>" />
        </div>
        <div class="mt-3">
            <label>ชื่อสินค้า</label>
            <input type="text" name="name" class="form-control" value="<%= product.name %>" />
        </div>
        <div class="mt-3">
            <label>ราคาทุน</label>
            <input type="text" name="cost" class="form-control" value="<%= product.cost %>" />
        </div>
        <div class="mt-3">
            <label>ราคาจำหน่าย</label>
            <input type="text" name="price" class="form-control" value="<%= product.price %>" />
        </div>
        <div class="mt-3">
            <label>ภาพสินค้า</label>
            <% if (product.img != undefined) { %>
            <div class="mb-3"><img src="../images/<%= product.img %>" width="200px />"</div>
            <% } %>
            <input type="file" name="img" class="form-control" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-info">
            Save
            </button>
        </div>
    </div>
</div>
</form>

<%- include('footer') %>