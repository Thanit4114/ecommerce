<%- include('page_header') %>

<div class="container mt-3">
<form>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">ป้อนคำค้นหา</div>
        </div>
            <input type="text" name="search" class="form-control" />
            <div class="input-group-append">
            <button class="btn btn-info" type="submit">
                <span class="material-symbols-outlined icons">
                    search
                </span>
                ค้นหา
        </button>
    </div>
    </div>
</form>

<div class="row mt-3">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <li class="list-group">
            <% groupProducts.forEach((item) => { %>
            <li class="list-group-item">
            <a href="/?groupProductId=<%= item.id %>">
                <%= item.name %>
            </a>
            </li>
            <% }) %>
        </li>
    </div>

    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-xs-12">
        <div class="row">
        <% product.forEach((product) => { %>
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card mb-2">
                <img src="images/<%= product.img %>" class="card-img-top" height="200px" />
                <div class="card-body">
                    <div><%= product.name %></div>
                    <div class="text-center text-bold text-info"><%= product.price %></div>
                    <div class="text-center">
                    <a class="btn btn-info mt-2 text-sm" href="/addToCart/<%= product.id %>">
                        <span class="material-symbols-outlined icons">
                            add_shopping_cart
                            </span>
                        Add to Cart
                    </a>
                </div>
                </div>
            </div>
        </div>

        <% }) %>
    </div>
</div>
<%- include('page_footer') %>

