<%- include('header') %>
<form method="post" action="/changeProfile">
<div class="card">
    <div class="card-body">
        <div class="card-title h3">แก้ไขข้อมูล</div>
        <div class="mt-3">
            <label>ชื่อ-สกุล</label>
            <input type="text" name="name" class="form-control" value="<%= user.name %>"/>
        </div>
            <div class="mt-3">
            <label>username</label>
            <input type="text" name="usr" class="form-control" value="<%= user.usr %>" />
            <div class="mt-3">
            <label>password *** <span class ="text-danger">หากไม่กรอกจะยึดตามรหัสเดิม</span></label>
            <input type="text" name="pwd" class="form-control" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-info">Save

            </button>
        </div>
        <% if (session.message != undefined) { %>
            <div class="alert alert-success">
                <%= session.message %>
                <% session.message = undefined %>
            </div>
            <% } %>
        </div>
    </div>
</div>
</form>

<%- include('footer') %>