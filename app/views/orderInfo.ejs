<%- include('header') %>

<div class="mt-3">
    <div class="h4">รายการสั่งซื้อ</div>
    <table class="table table-bordered table-stiped">
        <thead>
            <tr>
                <th width="100px">ภาพสินค้า</th>
                <th width="100px">บาร์โค้ด</th>
                <th>รายการสินค้า</th>
                <th class="text-right">ราคา</th>
                <th class="text-right">จำนวน</th>
                <th class="text-right">ยอดรวม</th>
            </tr>
        </thead>
        <tbody>
            <% orderDetails.forEach((orderDetail) => { %>
                <tr>
                    <td><img src="../images/<%= orderDetail.img %>" width="100px"</td>
                    <td><%= orderDetail.barcode %></td>
                    <td><%= orderDetail.name %></td>
                    <td class="text-right"><%= numeral(orderDetail.price).format() %></td>
                    <td class="text-right"><%= numeral(orderDetail.qty).format() %></td>
                    <td class="text-right"><%= numeral(orderDetail.qty * orderDetail.price).format() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="alert alert-success mt-3 h4 text-center">
        จำนวน <%= numeral(totalQty).format() %> รายการ
        เป็นเงิน <%= numeral(totalPrice).format() %> บาท
    </div>
</div>

<%- include('footer') %>